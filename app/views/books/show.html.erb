<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>


<h3>Book detail</h3>
<%= link_to @book.title, book_path(@book.id) %>
<%= @book.body %>

 <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
 <%= link_to "Edit", edit_book_path(@book.id) %>
 
  <% if flash[:notice] %>
 <p id="notice">
     <%= flash[:notice] %>
</p>
<% end %>     
      
      
      
      
      
      
      
