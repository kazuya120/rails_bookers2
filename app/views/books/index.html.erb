
<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>

<h3>Book detail</h3>

 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
   <tr>
     <td>
      <%= book.title %>
      <%= book.body %>
      <%= link_to "削除", book_path(book), method: :delete %>
      <%= link_to "Edit", edit_book_path(book.id) %>
     </td
   </tr>
   <% end %>
  </tbody>
 </table>




