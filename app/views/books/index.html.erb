





<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>



<%= form_with model:@book,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>

<h3>Book detail</h3>

 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
   <tr>
     <td>
      
      <%= link_to book.title, book_path(book) %>
      
      
      <%= book.body %>
     </td>
   </tr>
  </tbody>
 </table>
 
  <% if flash[:notice] %>
 <p id="notice">
     <%= flash[:notice] %>
 </p>
<% end %>
<% end %>



